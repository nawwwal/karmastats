{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/client" }
    },
    { "src": "api/ssr.js", "use": "@vercel/node" }
  ],
  "functions": {
    "api/ssr.js": {
      "includeFiles": "dist/**"
    }
  },
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    {
      "src": "/(favicon\\.svg|og-default\\.png|robots\\.txt|sitemap\\.xml|llms\\.txt|qr-code-coffee\\.jpeg|qr-code-tea\\.jpeg)",
      "dest": "/$1"
    },
    {
      "src": "/(.*\\.(?:css|js|map|json|png|jpg|jpeg|webp|gif|svg|ico|txt|xml))",
      "dest": "/$1"
    },
    { "src": "/(.*)", "dest": "/api/ssr" }
  ]
}
